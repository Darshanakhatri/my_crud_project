{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h3 class="mb-0 ">Product Details</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                   
                    <tbody>
                        <tr>
                            <th>ID: </th> <td>{{ product.id }}</td>
                        </tr> 
                        <tr> 
                            <th>Title: </th><td>{{ product.title }}</td>
                        </tr>
                        <tr>
                            <th>Quatity: </th><td>{{ product.quantity }}</td>
                        </tr>
                        <tr>
                            <th>Sold: </th><td>{{ product.soldQuantity }}</td>
                        </tr>
                        <tr>
                            <th>Unsold: </th><td>{{ product.unsoldQuantity }}</td>
                        </tr>
                        <tr>
                            <th>Price:</th><td>{{ product.price }}</td>
                        </tr>
                        <tr>
                            <th>Discount %:</th> <td>{{ product.discount }}</td>
                        </tr>
                        <tr>
                            <th>Total Price:</th><td>{{ product.actualPrice|number_format(2, '.', ',') }} EUR</td>
                        </tr>
                        <tr>
                            <th>Total Price After Discount:</th><td>{{ product.totalPrice|number_format(2, '.', ',') }} EUR</td>
                        </tr>
                        {# Add other product fields here if needed #}
                    </tbody>
                </table>

                <div class="d-flex gap-2 mt-3">
                    <a href="{{ path('app_product_index') }}" class="btn btn-secondary mt-3">‚Üê Back to list</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary mt-3">Edit</a>
                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


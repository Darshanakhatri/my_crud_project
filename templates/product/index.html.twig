{% extends 'base.html.twig' %}

{% block title %}Product Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Product Index</h1>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Per Product after Discountt %</th>
                   
                    <th scope="col" style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.discount }}</td>
                    <td>{{ product.priceAfterDiscount}}</td>
                    
                    <td>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info me-2">Show</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_product_new') }}" class="btn btn-success mt-3">Create New Product</a>
    </div>
{% endblock %}
